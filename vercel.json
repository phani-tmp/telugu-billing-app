{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
                "buildCommand": "npm install && npm run build:client",
                "outputDirectory": "client/dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "dist/index.html"
        },
        {
            "src": "/api/(.*)",
            "dest": "https://telugu-billing-app.onrender.com/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "dist/$1"
        }
    ],
    "installCommand": "npm install"
}